for member in range(len(names)):
    print(names[member] + " " + str(member))
    print(str(ff_classes[member]))

print("\nPick 4. Warrior is 0, ..., Red Mage is 5")
choice1 = int(input())
choice2 = int(input())
choice3 = int(input())
choice4 = int(input())

party = [choice1, choice2, choice3, choice4]
totalStats = 0

for stat in party:
    stats = sum(ff_classes[stat])

    if ff_classes[stat] is True:
        stats += 1

    print(str(stats))
    totalStats += stats
    print("--party total: ", int(totalStats))
print(str(totalStats))
